# Configuration MongoDB
# Local (dev)
MONGODB_URI=mongodb://localhost:27017/sentiers974
# Production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster.example.mongodb.net/sentiers974?retryWrites=true&w=majority&appName=sentiers974-prod

# Configuration serveur API
PORT=3001
NODE_ENV=production

# Configuration CORS (liste dorigines autorisees, separees par des virgules)
# En production, limiter aux domaines front reels
ALLOWED_ORIGINS=https://sentiers-974.onrender.com

# Configuration JWT (Authentification) - a remplacer par un vrai secret en prod
JWT_SECRET=CHANGE_ME_WITH_A_LONG_RANDOM_SECRET

# Configuration Cloudinary (Upload de photos) - valeurs factices
CLOUDINARY_CLOUD_NAME=example_cloud
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=example_secret

# Configuration SMTP pour reset password (exemple)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=user@example.com
SMTP_PASS=example_password
SMTP_SECURE=true
FROM_EMAIL=noreply@example.com
RESET_URL_BASE=https://sentiers-974.onrender.com
