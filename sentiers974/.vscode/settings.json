{
  "cSpell.enabled": true,
  "cSpell.language": "en,fr",
  "cSpell.enableFiletypes": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "markdown"
  ],
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.ignorePaths": [
    ".claude/**",
    "node_modules/**",
    "package-lock.json",
    ".expo/**"
  ],
  "files.associations": {
    ".cursorrules": "markdown"
  }
}
